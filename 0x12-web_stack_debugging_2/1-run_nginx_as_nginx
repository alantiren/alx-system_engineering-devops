#!/usr/bin/env bash
# This script configures Nginx to run as the nginx user and listen on port 8080.

# Update the nginx.conf file to run Nginx as the nginx user
sed -i 's/user\s*[^;]*/user nginx;/' /etc/nginx/nginx.conf

# Update the default site configuration to listen on port 8080
sed -i 's/listen\s*[^;]*/listen 8080;/' /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
service nginx restart

# Check if Nginx is running as the nginx user and listening on port 8080
if ps aux | grep -E "[n]ginx.*master.*nginx" && nc -z 0 8080; then
    echo "Nginx is running as nginx user and listening on port 8080."
else
    echo "Failed to configure Nginx as required."
fi
